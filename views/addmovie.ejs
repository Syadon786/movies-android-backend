<%- include('header') -%> 
<div class="container mb-4 mt-4">
<form action="/addmovie" method="post">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" name="title" placeholder="Enter movie title">
    </div>
    <div class="form-group">
        <label for="released_year">Released year</label>
        <input type="date" class="form-control" name="released_year">
    </div>
    <div class="form-group">
        <label for="plot">Plot</label>
        <textarea class="form-control" name="plot" rows="5" placeholder="Enter the movie plot"></textarea>
    </div>
    <div class="form-group">
        <label for="genres">Genres</label>
        <select multiple class="form-control" name="genres">
          <option>Sci-Fi</option>
          <option>Akci√≥</option>
          <option>Kaland</option>
        </select>
      </div>  
    <div class="form-group">
        <label for="playtime">Playtime</label>
        <input type="text" class="form-control" name="playtime" placeholder="Format example: 2:07 (2 hours 7 minutes)">
    </div>
    <div class="form-group">
        <label for="director">Director</label>
        <input type="text" class="form-control" name="director" placeholder="Enter director name">
    </div>
    <div class="form-group">
        <label for="cost">Cost</label>
        <input type="number" min="0.00" step="any" class="form-control" name="cost" placeholder="Enter movie cost">
    </div>
    <div class="form-group">
        <label for="profit">Profit</label>
        <input type="number" min="0.00" step="any" class="form-control" name="profit" placeholder="Enter movie profit">
    </div>
    <div class="form-group">
        <label for="cast">Cast</label>
        <textarea class="form-control" name="cast" rows="4" placeholder="Actor name#Played Character name,Another Actor name#Played Character name"></textarea>
    </div>
    <div class="form-group">
        <label for="poster">Poster</label>
        <input type="text" class="form-control" name="poster" placeholder="Enter poster image's name with extension (ex: ujremeny.jpg)">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
<%- include('footer') -%> 